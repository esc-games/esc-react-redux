{
  "name": "@esc_games/esc-react-redux",
  "version": "1.0.1",
  "description": "EventManager and ReducerManager make feature life easier/more focused ",
  "main": "source/index.js",
  "scripts": {
    "build": "babel source --presets env --out-dir dist --copy-files",
    "test": "jest",
    "link": "npm run build && cp package.json dist && cp README.md dist && cd dist && npm link",
    "dist": "npm run build && cp package.json dist && cp README.md dist && cd dist && npm publish"
  },
  "author": {
    "name": "ESC Games",
    "email": "admin@esc.games"
  },
  "license": "MIT",
  "babel": {
    "plugins": [
      "transform-es2015-destructuring",
      "transform-object-rest-spread",
      [
        "transform-runtime",
        {
          "polyfill": false,
          "regenerator": true
        }
      ]
    ],
    "presets": [
      "env",
      "react"
    ]
  },
  "jest": {
    "verbose": true,
    "collectCoverageFrom": [
      "source/**/*.{js,jsx,mjs}"
    ],
    "setupFiles": [
      "<rootDir>/config/polyfills.js"
    ],
    "testMatch": [
      "<rootDir>/source/**/__tests__/**/*.{js,jsx,mjs}",
      "<rootDir>/source/**/?(*.)(spec|test).{js,jsx,mjs}"
    ],
    "testEnvironment": "node",
    "testURL": "http://localhost",
    "transform": {
      "^.+\\.(js|jsx|mjs)$": "babel-jest",
      "^.+\\.css$": "<rootDir>/config/jest/cssTransform.js",
      "^(?!.*\\.(js|jsx|mjs|css|json)$)": "<rootDir>/config/jest/fileTransform.js"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx|mjs)$"
    ],
    "moduleNameMapper": {
      "^react-native$": "react-native-web"
    },
    "moduleFileExtensions": [
      "web.js",
      "js",
      "json",
      "web.jsx",
      "jsx",
      "node",
      "mjs"
    ],
    "globals": {
      "window": {}
    }
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-jest": "^23.4.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "fetch": "^1.1.0",
    "jest": "^23.4.1",
    "jsdom": "^11.11.0",
    "raf": "^3.4.0",
    "react": "^16.4.1",
    "transform-runtime": "0.0.0",
    "whatwg-fetch": "^2.0.4"
  },
  "dependencies": {
    "react-redux": "^5.0.7",
    "redux": "^4.0.0"
  }
}
